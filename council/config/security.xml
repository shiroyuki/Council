<?xml version="1.0" encoding="utf-8"?>
<application>
    <server>
        <!-- Secret salt for secure-cookie feature -->
        <secret></secret>
        <!-- Uncomment below to enable custom error controller -->
        <!-- <error>app.web.controller.ErrorController</error> -->
    </server>
    <routes>
        <!-- Example for routing. See the documentation for more information. -->
        <!--
            <controller class="app.web.controller.Home"    pattern="/"/>
            <controller class="app.web.controller.Session" pattern="/(login|logout|session)"/>
            <controller class="app.web.interface.Entity"   pattern="/api/v1/entity/(\d+)/([^\s]+)/(\d*)"/>
        -->
        <controller class="council.controller.Home" pattern="/"/>

        <controller
                class="council.security.controller.LogoutHandler"
                pattern="/logout"
                />

        <controller
                class="council.security.controller.LocalHandler"
                pattern="/login/local"
                />

        <controller
                class="council.security.controller.MockHandler"
                pattern="/login/mock"
                />

        <controller
                class="council.security.controller.GoogleHandler"
                pattern="/login/google"
                />
    </routes>
</application>
